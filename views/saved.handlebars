<p>{{this.summary}}</p>
<a href={{this.url}}>Go To Article</a>
<br>
<br>
<h5>Article comments</h5>
{{#each this.comments}}
<div><p style="display:inline-block;">{{this.body}}</p> &nbsp; <small style="display:inline-block;">{{this.createdDate}}</small></div>
{{/each}}
<form action="/api/{{this._id}}/comment" method="POST">
    <div>
        <textarea name="body"></textarea>
    </div>
    <div>
        <button type="submit">Submit Comment</button>
    </div>
</form>
